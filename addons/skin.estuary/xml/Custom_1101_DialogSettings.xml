<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1101">
	<defaultcontrol always="true">11000</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<onunload>ClearProperty(dialogsettings_header,Home)</onunload>
	<onunload>ClearProperty(dialogsettings_content,Home)</onunload>
	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<height>700</height>
			<centertop>50%</centertop>
			<width>700</width>
			<include condition="String.IsEqual(window(home).Property(dialogsettings_content),osd) | String.IsEqual(window(home).Property(dialogsettings_content),3d) | String.IsEqual(window(home).Property(dialogsettings_content),games)">DialogSettingsOSDVisible</include>
			<animation effect="fade" time="200">VisibleChange</animation>
			<include content="DialogBackgroundCommons">
				<param name="width" value="700" />
				<param name="height" value="80" />
				<param name="header_label" value="$INFO[Window(home).Property(dialogsettings_header)]" />
				<param name="header_id" value="1" />
			</include>
			<control type="group" id="11000">
				<left>0</left>
				<top>80</top>
				<control type="grouplist" id="11100">
					<width>700</width>
					<height>700</height>
					<itemgap>0</itemgap>
					<onup>11100</onup>
					<ondown>11100</ondown>
					<orientation>vertical</orientation>
					<include condition="String.IsEqual(window(home).Property(dialogsettings_content),osd)">DialogSettingsOSDContent</include>
					<include condition="String.IsEqual(window(home).Property(dialogsettings_content),3d)">DialogSettings3DContent</include>
					<include condition="String.IsEqual(window(home).Property(dialogsettings_content),games)">DialogSettingsGameContent</include>
					<include condition="String.IsEqual(window(home).Property(dialogsettings_content),musicosd)">DialogSettingsMusicOSDContent</include>
				</control>
			</control>
		</control>
	</controls>
</window>
